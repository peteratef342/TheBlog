<div class="row">
  <div class="col-xs-6  ">  
    <div class="well well-lg">  

      <div>
        

            <div>
              <span id="comment-body-<%= comment.id %>"><%= comment.body %></span>

              <input type="text" class="form-control comment-edit" data-comment-id="<%= comment.id %>" 
                     id="comment-input-<%= comment.id %>" placeholder="comment" style="display: none">
            </div>

            <%if  comment.user == current_user %>
              <div class="owner-post-actions">

                <button id="edit-btn-<%= comment.id %>" data-comment-id="<%= comment.id %>" 
                        class="edit-btn btn btn-xs btn-primary">Edit</button>
                
                <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' },
                class: "btn btn-xs btn-primary"%>
              
              </div>
            <%end%>
           
      </div>

    </div>   
  </div>
</div>
